{
  "manifest_version": 3,
  "name": "拼多多商品聊天监听器",
  "version": "1.0.0",
  "description": "实时监控拼多多商品聊天内容变化，支持多种通知方式",
  "permissions": [
    "storage",
    "notifications",
    "tabs",
    "scripting",
    "windows",
    "activeTab",
    "webNavigation",
    "webRequest"
  ],
  "host_permissions": [
    "https://mobile.pinduoduo.com/*",
    "https://*.pinduoduo.com/*",
    "https://mobile.yangkeduo.com/*",
    "https://*.yangkeduo.com/*",
    "http://localhost:8090/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.svg"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://mobile.pinduoduo.com/*",
        "https://*.pinduoduo.com/*",
        "https://mobile.yangkeduo.com/*",
        "https://*.yangkeduo.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  }
} 